---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;
const {title, author, pubDate, description} = frontmatter;
---

<Layout title={title}>
  <header class="bg-indigo-200 p-4 text-center">
    <h1 class="text-3xl font-bold">{title}</h1>
    <h3 class="text-xl text-gray-600">Escrito por: {author}</h3>
    <p class="text-gray-500">Publicado el: {pubDate.toString().slice(0, 10)}</p>
    <p class="text-gray-700 mt-2">{description}</p>
  </header>
  <main class="bg-white p-8 max-w-4xl mx-auto text-justify">
    <slot />
  </main>
</Layout>
<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
