---
import Layout from "./Layout.astro";
const {frontmatter} = Astro.props;
const {title, author, pubDate, description} = frontmatter;
---

<Layout title={frontmatter.title}>
  <header class="bg-indigo-100 py-10 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1
        class="text-4xl font-semibold text-indigo-950 mb-2 leading-tight tracking-tight text-pretty pointer-events-none">
        {title}
      </h1>
      <p class="text-sm text-gray-500 text-pretty pointer-events-none">
        Publicado el <time>{pubDate.toString().slice(0, 10)}</time> por <span
          class="font-medium text-gray-700 text-pretty pointer-events-none"
          >{author}</span
        >
      </p>
      <p
        class="text-gray-600 text-center mt-4 text-lg md:block leading-tight tracking-tighter text-pretty pointer-events-none">
        {description}
      </p>
    </div>
  </header>

  <main
    class="bg-white px-6 md:px-8 py-12 max-w-4xl mx-auto text-justify text-gray-800 leading-relaxed shadow-md rounded-xl prose prose-indigo">
    <slot />
  </main>
</Layout>