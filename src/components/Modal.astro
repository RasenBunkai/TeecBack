---
import Image from "astro/components/Image.astro"
---

<div id="popup-modal" tabindex="-1" class="hidden fixed inset-0 z-50 flex justify-center items-center w-full h-full bg-black bg-opacity-50">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-indigo-400 rounded-lg">
            <!-- Contenido del modal -->
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="p-4 md:p-5 text-center">
                <Image src="/Shimadaclan.png" alt="Shimada" class="mx-auto mb-4 h-14 w-14" width="56" height="56"/>
                <h3 class="mb-5 text-lg font-normal text-white">Unete a nuestra comunidad de egresados</h3>
                <a href="" class="text-white bg-green-700 hover:bg-green-900 text-sm rounded-lg px-5 py-2.5" target="_blank">Canal de WhatsApp</a>
                <a href="" class=" text-white bg-blue-600 hover:bg-blue-900 text-sm rounded-lg px-5 py-2.5" target="_blank">Canal de Discord</a>
            </div>
        </div>
    </div>
</div>

<script>
    // Seleccionar el bot贸n que abre el modal
  const modalButton = document.getElementById('comunity-button');
// Seleccionar el modal
  const modal = document.getElementById('popup-modal');
// Seleccionar los botones que cierran el modal
  const closeButtons = document.querySelectorAll('[data-modal-hide="popup-modal"]');
// Funci贸n para mostrar el modal
  function showModal() {
      modal.classList.remove('hidden');
  }
// Funci贸n para ocultar el modal
  function hideModal() {
      modal.classList.add('hidden');
  }
// Agregar evento para mostrar el modal cuando se hace clic en el bot贸n
  modalButton.addEventListener('click', showModal);
// Agregar eventos para ocultar el modal cuando se hace clic en los botones de cerrar
  closeButtons.forEach(button => {
      button.addEventListener('click', hideModal);
  });
</script>