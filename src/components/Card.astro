---
import { Image } from "astro:assets";

const { title, body, link, imgSrc, btntext, imgWidth, imgHeight } = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded bg-white shadow">
    <div class="h-52">
        <Image
            src={imgSrc}
            alt={title}
            class="h-full w-full object-cover object-center"
            width={imgWidth}
            height={imgHeight}
            loading="lazy"
        />
    </div>
    <div class="flex-1 space-y-3 p-5">
        <h2 class="text-2xl font-semibold leading-tight text-slate-950 mb-2">
            {title}
        </h2>
        <p class="text-gray-700 text-lg md:block">{body}</p>
    </div>
    <div class="flex space-x-2 p-5">
        <a
            href={link}
            class="block w-full bg-blue-500 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded mt-4 text-center"
            >{btntext}</a
        >
    </div>
</div>
