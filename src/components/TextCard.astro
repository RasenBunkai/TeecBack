---
const {title, body, link, btntext} = Astro.props;
const array = [
  "Plantillas de CV",
  "Descarga formatos profesionales y personaliza tu currículum.",
  "https://rxresu.me/",
  "Ver más →",
];
---
<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-xl font-semibold">{title}</h3>
  <p class="text-gray-600">{body}</p>
  <a
    href={link}
    target="_blank"
    class="text-blue-600 font-semibold hover:text-blue-800 hover:underline">{btntext}</a>
</div>
