---
const {title, body, link, btntext} = Astro.props;
---

<div
  class="bg-white shadow-md rounded-lg p-6 hover:scale-105 transition-transform duration-300">
  <h3
    class="text-2xl font-semibold leading-tight text-indigo-950 mb-2 tracking-tighter text-pretty pointer-events-none">
    {title}
  </h3>
  <p
    class="text-gray-700 text-lg md:block leading-tight mb-2 tracking-tighter text-pretty pointer-events-none">
    {body}
  </p>
  <a
    href={link}
    target="_blank"
    class="text-indigo-700 font-semibold hover:text-indigo-950 text-lg md:block leading-tight mb-2 tracking-tighter text-pretty hover:translate-x-2 transition-all duration-300"
    >{btntext}</a
  >
</div>
